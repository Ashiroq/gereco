<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTreeTableView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LeaderBoardController">
   <children>
      <HBox alignment="CENTER" spacing="5.0">
         <children>
            <Label alignment="CENTER" text="Classificação do(a) ">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label fx:id="lblModalityAndGender">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <JFXTreeTableView fx:id="leaderBoardTableView" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" showRoot="false" VBox.vgrow="SOMETIMES">
         <columns>
            <TreeTableColumn fx:id="positionColumn" minWidth="100.0" prefWidth="100.0" resizable="false" text="Posição" />
            <TreeTableColumn fx:id="nameColumn" minWidth="100.0" prefWidth="100.0" resizable="false" text="Nome" />
            <TreeTableColumn fx:id="pointsColumn" minWidth="100.0" prefWidth="100.0" resizable="false" text="Pontos" />
            <TreeTableColumn fx:id="ownPointsColumn" minWidth="100.0" prefWidth="100.0" resizable="false" text="PP" />
            <TreeTableColumn fx:id="againstPoinstColumn" minWidth="100.0" prefWidth="100.0" resizable="false" text="PC" />
            <TreeTableColumn fx:id="balanceColumn" minWidth="100.0" prefWidth="100.0" resizable="false" text="Saldo" />
            <TreeTableColumn fx:id="foulsColumn" minWidth="100.0" prefWidth="100.0" resizable="false" text="Penalidades" />
         </columns>
      </JFXTreeTableView>
      <JFXButton maxWidth="1.7976931348623157E308" onAction="#exportLeaderBoardToPdf" styleClass="btnEvent" text="Baixar como PDF">
         <font>
            <Font size="14.0" />
         </font>
      </JFXButton>
   </children>
</VBox>
